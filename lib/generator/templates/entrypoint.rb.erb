<% required_libraries.each do |required_library| -%>
require "<%= required_library %>"
<% end -%>

module Peddler
  class << self
    attr_writer :raise_on_server_errors

    # steep:ignore:start
    def raise_on_server_errors
      @raise_on_server_errors = false if @raise_on_server_errors.nil?
      @raise_on_server_errors
    end
    # steep:ignore:end

    def configure
      yield self
    end

    <% apis_with_latest_version.each do |api_name, version| -%>
    alias_method :<%= api_name %>, :<%= [api_name, version].join('_') %>
    <% end -%>
  end
end
