
require "peddler/api"
<% if has_helper? -%>
  require "<%= helper_library_name %>"
<% end %>

module Peddler
  class << self
    def <%= name_with_version %>(...)
      APIs::<%= class_name %>.new(...)
    end
  end

  module APIs
    <%= title %>
    #
    <%= description %>
    class <%= class_name %> < API
      <% if has_helper? %>
        include <%= helper_class_name %>
      <% end %>
      <% operations.each do |operation| %>
        <%= operation.render %>
      <% end %>
    end
  end
end
