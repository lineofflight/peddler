# frozen_string_literal: true

# <%= Generator::Config::GENERATED_FILE_NOTICE %>

module Peddler
  module DataKiosk
    module <%= class_name %>
      class << self
        # Get the GraphQL schema for this data kiosk
        #
        # @return [Hash] GraphQL schema introspection data
        # @example Load with graphql-client
        #   schema = Peddler::DataKiosk::<%= class_name %>.schema
        #   client = GraphQL::Client.load_schema(schema)
        def schema
          path = File.expand_path("<%= schema_name.underscore %>.json", __dir__.to_s)
          JSON.load_file(path)
        end
      end
    end
  end
end
